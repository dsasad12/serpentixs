# ============================================
# SerpentixPay - Variables de Entorno Docker
# ============================================
# Copia este archivo a .env y configura los valores

# ===========================================
# General
# ===========================================
APP_NAME=SerpentixPay
APP_URL=http://localhost
CORS_ORIGIN=http://localhost

# ===========================================
# Base de Datos
# ===========================================
# Opciones: sqlite, mysql, postgresql
DATABASE_PROVIDER=postgresql

# Para SQLite (solo para pruebas)
# DATABASE_URL=file:./data/serpentixpay.db

# Para PostgreSQL (recomendado para producci√≥n)
DATABASE_URL=postgresql://serpentixpay:serpentixpay@db:5432/serpentixpay
DB_NAME=serpentixpay
DB_USER=serpentixpay
DB_PASSWORD=serpentixpay

# Para MySQL
# DATABASE_URL=mysql://serpentixpay:serpentixpay@db:3306/serpentixpay
# DB_ROOT_PASSWORD=rootpassword

# ===========================================
# Seguridad
# ===========================================
# Genera claves seguras con: openssl rand -base64 64
JWT_SECRET=CAMBIA_ESTO_POR_UNA_CLAVE_SEGURA
JWT_REFRESH_SECRET=CAMBIA_ESTO_POR_OTRA_CLAVE_SEGURA
SESSION_SECRET=CAMBIA_ESTO_POR_UNA_CLAVE_DE_SESION
